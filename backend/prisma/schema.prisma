generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  emailAccounts emailAccount[]
}

model emailAccount {
  id        String   @id @default(cuid())
  email     String   @unique
  imapHost  String
  imapPort  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      user     @relation(fields: [userId], references: [id])
  emails    email[]
}

model email {
  id         String       @id @default(cuid())
  subject    String
  to         String
  from       String
  textBody   String
  htmlBody   String
  cc         String
  bcc        String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  receivedAt DateTime     @default(now())
  accountId  String
  account    emailAccount @relation(fields: [accountId], references: [id])
}
